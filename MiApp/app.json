{
  "expo": {
    "name": "MiApp",
    "slug": "MiApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "miapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.miapp",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "We need local network access to find nearby devices for messaging",
        "NSBonjourServices": ["_bt-messenger._tcp"],
        "NSBluetoothAlwaysUsageDescription": "We need Bluetooth to communicate with nearby devices",
        "NSBluetoothPeripheralUsageDescription": "We need Bluetooth to communicate with nearby devices"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.yourname.miapp",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-nearby-connections",
        {
          "bonjourServicesName": "bt-messenger",
          "localNetworkUsagePermissionText": "We need local network access to find nearby devices for messaging"
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Bluetooth"]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}